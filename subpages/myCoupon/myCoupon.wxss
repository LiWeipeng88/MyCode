/* subpages/myCoupon/myCoupon.wxss */
.no-data image{width:210rpx;height:180rpx;}
.top-zhanwei {
  height: 100rpx;
}
.couponTab-wrap{
  padding:0 20rpx;
  background-color:#fff;
}
.coupon-tab{
  letter-spacing: 1rpx;
}
.coupon-tab .tab-item{
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  color:#666;
  box-sizing:border-box;
  position:relative;
}
.coupon-tab .tab-item.active{
  color:#2FCD98;
  /* border-bottom:5rpx solid #2FCD98; */
}
.coupon-tab .tab-item.active:after{
  content:'';
  width:20%;
  height:5rpx;
  background-color:#2FCD98;
  position:absolute;
  left:40%;
  top:95rpx;
}
/* 更多好券 */
.more-coupon-btn { width: 94%; margin: 22rpx auto 0; background-color: #fff;text-align: center; font-size: 0; padding: 22rpx 0; border-radius: 8rpx;box-shadow: 0 0 8rpx #ddd; }
.more-coupon-btn text { display: inline-block; font-size: 30rpx; vertical-align: middle; color: #2FCD98; position:relative;top:2rpx;}
.more-coupon-btn image { width:38rpx;height:26rpx;vertical-align:middle;margin-right:10rpx; }

.coupon-list{
  padding:20rpx 1rpx;
}
.coupon-list .coupon-item{
  width:748rpx;
  height:272rpx;
  position:relative;
}
.coupon-list .coupon-item .label-icon{
  display: block;
  width:120rpx;
  height:120rpx;
  position:absolute;
  right: 40rpx;
  bottom:35rpx;
}
.coupon-list .coupon-item .bg{
  display: block;
  width:100%;
  height:100%;
}
.coupon-list .coupon-item .coupon-infor{
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  padding: 20rpx 40rpx;
}
.coupon-list .coupon-infor .money-wrap{
  color:#333;
  font-size:32rpx;
  height:150rpx;
}
.coupon-list .coupon-infor .money-wrap .money{
  color:#2FCD98;
  font-size:50rpx;
  font-weight: bold;
}
.coupon-list .coupon-infor .money-wrap .money text{
  font-size:26rpx;
}
.coupon-list .coupon-infor .money-wrap .desc{
  padding:0 20rpx;
}
.coupon-list .coupon-infor .btn-wrap{
  background-color:#2FCD98;
  padding:10rpx 25rpx;
  text-align: center;
  color:#fff;
  border-radius:30rpx;
  font-size:26rpx;
  box-shadow: 0 0 10rpx #2FCD98;
}
.coupon-list .coupon-infor .time{
  font-size:26rpx;
  color:#999;
  line-height:80rpx;
}