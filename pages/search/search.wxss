/* 菜单 */
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}
.nav_item{
    padding: 10rpx 18rpx;
    font-size: 28rpx;
    display: inline-block;
    color: #5a5a5a;
    font-weight: bold;
}
.nav_item.active{
    border-bottom: 8rpx solid #2cd5ab;
    color: #000;
}
/* 商品列表 */
.goodsList{
  display: flex;
  margin-top: 20rpx;
}
.goodsList .goodsImg{
  flex: 1;
  padding-right: 8rpx;
}
.goodsList .goodsImg image{
  width: 220rpx;
  height: 220rpx;
}
.goodsList .goodsInfo{
  flex: 2;
  position: relative;
}
.goodsList .goodsInfo .goodsTitle{
  font-weight: bold;
  color: #242424;
  font-size: 30rpx;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
}
.goodsList .goodsInfo .goodsTitle .dati text{
  font-weight: normal;
  color: #666;
  font-size: 22rpx;
  padding-top: 10rpx;
}
.goodsList .goodsInfo .goodsText .newPrice{
  font-weight: normal;
  color: #2cd5ab;
  font-size: 22rpx;
  padding-top: 18rpx;
}
.goodsList .goodsInfo .goodsText .newPrice text{
  font-weight: bold;
  color: #2cd5ab;
  font-size: 36rpx;
}
.goodsList .goodsInfo .goodsText .oldPrice{
  font-weight: normal;
  color: #999;
  font-size: 20rpx;
}
.goodsList .goodsInfo .goodsText .oldPrice text{
  text-decoration: line-through;
  color: #999;
  text-decoration-color: #999;
}
.goodsList .goodsInfo .goodsText .goodsTime{
  margin-top: 0rpx;
  width: 263rpx;
  height: 30rpx;
  border: 1px solid #2cd5ab;
  border-radius: 15rpx;
  position: relative;
}
.goodsList .goodsInfo .goodsText .goodsTime .goodsTimeText{
  color: #2cd5ab;
  width: 100rpx;
  display: block;
  height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 30rpx;
}
.goodsList .goodsInfo .goodsText .goodsTime .goodsTimeData{
  width: 170rpx;
  height: 30rpx;
  background: #2cd5ab;
  text-align: center;
  display: block;
  font-size: 18rpx;
  color: #fff;
  line-height: 30rpx;
  position: absolute;
  top: 0;
  right: -4rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
.goodsList .goodsInfo .shopping{
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
}
.goodsList .goodsInfo .shopping image{
  width: 70rpx;
  height: 70rpx;
}
