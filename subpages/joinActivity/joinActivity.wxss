/* subpages/joinActivity/joinActivity.wxss */
.top-zhanwei {
  height: 100rpx;
}
.couponTab-wrap{
  padding:0 20rpx;
  background-color:#fff;
}
.coupon-tab{
  letter-spacing: 1rpx;
}
.coupon-tab .tab-item{
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  color:#666;
  box-sizing:border-box;
  position:relative;
}
.coupon-tab .tab-item.active{
  color:#2FCD98;
}
.coupon-tab .tab-item.active:after{
  content:'';
  width:20%;
  height:5rpx;
  background-color:#2FCD98;
  position:absolute;
  left:40%;
  top:95rpx;
}
.activity-list{
  padding:20rpx;
}
.activity-list .activity-item{
  padding:20rpx;
  background-color:#fff;
  border-radius:16rpx;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}
.activity-list .activity-item .name-status .name{
  padding-right: 20rpx;
  font-size:30rpx;
  color:#333;
}
.activity-list .activity-item .name-status .status{
  color:#FF8416;
  font-size:28rpx;
}
.activity-list .activity-item .desc{
  padding:10rpx 0;
  font-size:28rpx;
  color:#999;
}
.activity-list .activity-item .good-wrap{
  background-color:#f8f8f8;
  padding:20rpx;
  border-radius:10rpx;
  color:#333;
  font-size:30rpx;
}
.activity-list .activity-item .address-wrap{
  padding:10rpx 0;
}
.activity-list .activity-item .address-wrap image{
  width:26rpx;
  height:31.9rpx;
  margin-right: 10rpx;
}
.activity-list .activity-item .address-wrap .address{
  font-size:28rpx;
  color:#999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.activity-list .activity-item .btn-wrap{
  padding-top:20rpx;
  text-align: right;
}
.activity-list .activity-item .btn-wrap .btn{
  display: inline-block;
  padding:10rpx 20rpx;
  font-size:24rpx;
  color:#999;
  box-sizing:border-box;
  border:1rpx solid #dedede;
  border-radius:30rpx;
  margin-left:20rpx;
  position:relative;
}
.activity-list .activity-item .btn-wrap .btn button{
  position: absolute; 
  left: 0; 
  top: 0; 
  height: 100%; 
  width: 100%; 
  margin: 0; 
  opacity: 0; 
  z-index: 1;
}

/* 无参与活动 */
.no-activity{
  padding-top:300rpx;
  text-align: center;
  letter-spacing: 1rpx;
}
.no-activity image{
  display: block;
  width:180rpx;
  height:210rpx;
  margin:0 auto 10rpx;
}
.no-activity  text{
  color:#999;
  font-size:30rpx;
}
.no-activity  .btn{
  width:260rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  color:#fff;
  font-size:28rpx;
  border-radius:40rpx;
  margin:30rpx auto 0;
  background-color:#2FCD98;
}